@model Blog

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
      <img src="@Model.ImagePath" style="width:150px" />
        <p class="card-title-desc">@Model.Description</p>
        <div class="d-flex flex-wrap gap-2">
            <form method="post" asp-asp-route-id="@Model.Id">

                     <button type="submit" class="btn btn-danger waves-effect waves-light">Delete</button>

                <a asp-action="Index" class="btn btn-light waves-effect">Back to list</a>
            </form>
        </div>
    </div>
</div>
